<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.kuehle.carreport"
    android:installLocation="auto"
    android:versionCode="7"
    android:versionName="@string/app_version" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <application
        android:name="Application"
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:backupAgent="me.kuehle.carreport.util.BackupAgent"
        android:description="@string/app_description"
        android:enabled="true"
        android:hasCode="true"
        android:icon="@drawable/ic_launcher"
        android:killAfterRestore="true"
        android:label="@string/app_name"
        android:restoreAnyVersion="false"
        android:testOnly="false"
        android:theme="@android:style/Theme.Holo"
        android:uiOptions="none" >
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIaqoQZUr-vL7mhscbezacNBQa79yK0nA51S3CZw" />

        <activity
            android:name="ReportActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="EditFragmentActivity" >
        </activity>
        <activity
            android:name="ViewDataActivity"
            android:label="@string/title_view_data" >
        </activity>
        <activity
            android:name="PreferencesActivity"
            android:label="@string/title_settings" >
        </activity>
    </application>

</manifest>